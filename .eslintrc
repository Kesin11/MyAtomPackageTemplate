{
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "mocha"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true,
    },
    "extends": [
      # Select your prefer base rules
      "eslint:recommended",
    ],
    "rules": {
      # Add your prefer config
      semi: ["error", "never"],
    },
    "globals": {
        "atom": false,
    }
}
